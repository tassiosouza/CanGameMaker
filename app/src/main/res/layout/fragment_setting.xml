<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_fragment_text_message" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/setting_fragment_seek_bar_tex_time"
            android:text="0" />

        <SeekBar
            android:id="@+id/setting_fragment_seek_bar_tex_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/setting_fragment_seek_bar_tex_time"
            android:text="50" />

    </RelativeLayout>

</LinearLayout>